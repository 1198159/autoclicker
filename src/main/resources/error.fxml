<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ErrorController">
   <center>
      <ScrollPane>
         <content>
            <Label fx:id="errorMessage" textAlignment="CENTER" textFill="#dd2c08" wrapText="true">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font></Label>
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <HBox alignment="CENTER">
         <Button onAction="#close" text="OK" textFill="#bc340e">
            <font>
               <Font size="14.0" />
            </font></Button>
      </HBox>
   </bottom>
</BorderPane>
